<div id="upcoming-item" class="upcoming-item" data-id="{{item.id}}">
  <h3>{{item.title}}</h3>
  <h4>{{item.due_date}}</h4>
  <h4>{{item.location}}</h4>
  <h4>{{item.description}}</h4>
  <h4>Date added: {{item.timestamp}}</h4>
  <!-- <h4>{{item.isPublic}}</h4> -->
  <h4>{{item.category}}</h4>
  <!-- When click 'edit' button, goes to state-item-update.handlebars view -->
  <button data-id="{{item.id}}" class="glyphicon glyphicon-edit" type="button" name="Edit"></button>
  <!-- When click 'delete' button, deletes item -->
  <button data-id="{{item.id}}" class="glyphicon glyphicon-remove" type="button" name="Delete"></button>
</div>
